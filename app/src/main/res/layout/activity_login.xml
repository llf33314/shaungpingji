<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

        <TextView
            android:textSize="@dimen/dp_10"
            android:textColor="@color/gray"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            />
    <LinearLayout
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_130"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="@dimen/dp_75"
        android:background="@color/white"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_22"
    android:orientation="horizontal"
    android:background="@drawable/bg_gray_border"
    android:paddingLeft="@dimen/dp_8"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="账号："
        android:textColor="@color/black"
        android:layout_marginRight="@dimen/dp_8"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/login_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="请输入登录账号"
        android:textColor="@color/black"
        android:background="@null"
        android:textSize="18sp"
        android:maxLines="1"
        android:maxLength="20"
        android:inputType="textVisiblePassword"
        />

</LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_22"
            android:orientation="horizontal"
            android:background="@drawable/bg_gray_border"
            android:paddingLeft="@dimen/dp_8"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="密码："
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/dp_8"
                android:textSize="18sp"
                />
            <EditText
                android:id="@+id/login_psd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入登录密码"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:background="@null"
                android:maxLines="1"
                android:maxLength="20"
                android:inputType="textPassword"
                android:imeOptions="actionGo"
                />

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/login_cb_psd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"
                android:textSize="18sp"
                android:button="@drawable/cb_login_choose"
                />
            <TextView
                android:id="@+id/login_forget_psd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码？"
                android:textColor="@color/forgetPsd"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                />

        </RelativeLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:text="登录"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_login"
            />
    </LinearLayout>


</FrameLayout>